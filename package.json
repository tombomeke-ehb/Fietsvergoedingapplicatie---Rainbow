{
  "name": "fietsvergoedingapplicatie---rainbow",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "scripts": {
    "dev": "concurrently \"npm -w backend run dev\" \"npm -w frontend run dev\"",
    "dev:backend": "npm -w backend run dev",
    "dev:frontend": "npm -w frontend run dev",

    "install:all": "npm install",

    "db:seed": "npm -w backend run db:seed",
    "db:reset": "npm -w backend run db:reset",

    "start": "npm -w backend run start",
    "build": "npm -w frontend run build"
  }
}
